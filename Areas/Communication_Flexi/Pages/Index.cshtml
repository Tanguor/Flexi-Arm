@page
@model Flexi_Arm.Areas.Communication.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form>
    <input type="button" class="previous round" value="&#8249;&#8249;" onclick="history.back()">
    <input type="button" class="next round" value="&#8250;&#8250;" onclick="history.forward()">
    <h1>Liste des Flexibowl</h1>
</form>

<p>
    <a asp-page="Create">Nouveau</a> |
</p>
<table class="table table-dark table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Flexibowl[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flexibowl[0].Ip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flexibowl[0].Port)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flexibowl[0].Modele_flexibowl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Flexibowl)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Port)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modele_flexibowl)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id_flexi">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id_flexi">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id_flexi">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
