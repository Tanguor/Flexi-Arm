@page
@model Flexi_Arm.Areas.Recettes.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color:black; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Créer une nouvelle recette</h1>

<h4>Recette</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Recette.Name" class="control-label"></label>
                <input asp-for="Recette.Name" class="form-control" />
                <span asp-validation-for="Recette.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recette.Description" class="control-label"></label>
                <input asp-for="Recette.Description" class="form-control" />
                <span asp-validation-for="Recette.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recette.id_Flexi" class="control-label"></label>
                <input asp-for="Recette.id_Flexi" class="form-control" />
                <span asp-validation-for="Recette.id_Flexi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recette.id_Robot" class="control-label"></label>
                <input asp-for="Recette.id_Robot" class="form-control" />
                <span asp-validation-for="Recette.id_Robot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recette.Id_Camera" class="control-label"></label>
                <input asp-for="Recette.Id_Camera" class="form-control" />
                <span asp-validation-for="Recette.Id_Camera" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Revenir à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
