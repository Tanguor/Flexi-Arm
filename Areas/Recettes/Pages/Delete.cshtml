@page
@model Flexi_Arm.Areas.Recettes.Pages.DeleteModel

@{
    ViewData["Title"] = "Suppression";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Suppression</h1>

<h3>Êtes vous sûr de vouloir supprimer cette recette ?</h3>
<div>
    <h4>Recette</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recette.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recette.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recette.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recette.Description)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Recette.Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./Index">Revenir à la liste.</a>
    </form>
</div>
