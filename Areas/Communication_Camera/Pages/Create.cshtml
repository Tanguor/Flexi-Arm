@page
@model Flexi_Arm.Areas.Communication_Camera.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Camera</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Camera.Name" class="control-label"></label>
                <input asp-for="Camera.Name" class="form-control" />
                <span asp-validation-for="Camera.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Camera.Ip" class="control-label"></label>
                <input asp-for="Camera.Ip" class="form-control" />
                <span asp-validation-for="Camera.Ip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Camera.Port" class="control-label"></label>
                <input asp-for="Camera.Port" class="form-control" />
                <span asp-validation-for="Camera.Port" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Camera.Modele_Camera" class="control-label"></label>
                <input asp-for="Camera.Modele_Camera" class="form-control" />
                <span asp-validation-for="Camera.Modele_Camera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Revenir à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
