@page
@model Flexi_Arm.Areas.Communication_Camera.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form>
    <input type="button" class="previous round" value="&#8249;&#8249;" onclick="history.back()">
    <input type="button" class="next round" value="&#8250;&#8250;" onclick="history.forward()">
    <h1>Liste des Caméras</h1>
</form>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Camera[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Camera[0].Ip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Camera[0].Port)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Camera[0].Modele_Camera)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Camera) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Port)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modele_Camera)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id_Camera">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id_Camera">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id_Camera">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
